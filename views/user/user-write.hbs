<section class="user row">

<div class="col-md-10 mx-auto pt-4">

<div class="row mx-auto">
  <h3 class="mx-auto">Write your diary</h3>
</div>
  
<form class="form-group" action="/user-write" method="post">
 
 <div class="row mx-auto mt-2 mb-3">
   <input type="text" name="username" id="username" value="{{user.username}}">
   <input type="text" name="timestamp" id="timestamp">
    <label for="heading">Enter headline</label>
  <input type="text" name="heading" id="heading" class="form-control" placeholder="" aria-describedby="helpId">

 </div>

 <div class="row mx-auto">

   <label for="content">Enter content</label>
 <textarea name="content" id="content" class="form-control" cols="100" width="100%" rows="10"></textarea>
 </div>
 <script>
  var timeStampInput=document.getElementById('timestamp');
  var usernameInput=document.getElementById('username');
  var date=new Date();
  timeStampInput.value=date;
  usernameInput.style.display='none';
  timeStampInput.style.display='none';
</script>
<button class="btn btn-outline-success form-control mt-4" type="submit">Submit</button>
</form>
</div>

</section>
